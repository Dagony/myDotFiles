set number
set numberwidth=4

set nocompatible
filetype indent plugin on
syntax on

" must have options
set hidden
set wildmenu
set showcmd
set hlsearch

" search options
set ignorecase
set smartcase
set autoindent
set startofline
set ruler
set laststatus=2
set confirm
set visualbell
set t_vb=
set mouse=a
set cmdheight=2
set notimeout ttimeout ttimeoutlen=200
set pastetoggle=<F11>

set shiftwidth=4
set softtabstop=4
set expandtab

set cursorline
highlight Cursorline term=bold cterm=bold ctermbg=darkblue ctermfg=white
